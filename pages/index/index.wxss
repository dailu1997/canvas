page {
  background: #fbfbfb;
  height: auto;
  overflow: hidden;
}
canvas {
width:100%;
/* height:100%; */
}
 
.wrapper {
  width: 100%;
  height: 95vh;
  margin: 30rpx 0 78rpx;
  overflow: hidden;
  display: flex;
  align-content: center;
  flex-direction: row;
  justify-content: center;
  font-size: 28rpx;
}
 
/* .handWriting {
  background: #fff;
